                            android:text="Day/lecture"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView android:layout_height="70dp"
                            android:layout_width="70dp"
                            android:text="I
                            (9:00am-10:00am)"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView android:layout_height="70dp"
                            android:layout_width="70dp"
                            android:text="II
                             (10:00am-11:00am)"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView android:layout_height="70dp"
                            android:layout_width="70dp"
                            android:text="III
                              (11:00am-12:00pm)"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView android:layout_height="70dp"
                            android:layout_width="70dp"
                            android:text="IV
                             (12:00pm-01:00pm)"
