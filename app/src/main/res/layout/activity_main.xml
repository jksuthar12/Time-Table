                            android:gravity="center"/>
                        <TextView android:layout_height="70dp"
                            android:layout_width="70dp"
                            android:text="VII
                              (03:00pm-04:00pm)"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView android:layout_height="70dp"
                            android:layout_width="70dp"
                            android:text="VIII
                               (04:00pm-05:00pm)"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
